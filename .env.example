# Example configuration for the iventoy dashboard
# Port on which the Node.js backend listens
PORT=3000

# Directory where uploaded ISO files will be stored
# This should point to the "iso" directory of your iVentoy installation
ISO_DIR=/opt/iventoy/iso

# URL of the iVentoy JSON API used by the dashboard
IVENTOY_API_URL=http://1.2.3.4:26000/iventoy/json

# Port used by iVentoy to serve ISO downloads and the embedded viewer
IVENTOY_WEB_PORT=16000
